<%- include("../includes/header.ejs", {title:"Customers"}); %>
<h1>Customers</h1>
<a href="/customer/add">Add New Customer</a> <br />
<br />
<table border="1">
    <tr><th>Customer Name</th><th>Contact Phone</th><th>Delivery Address</th><th>Actions</th></tr>
    <% for(var i=0; result.length > i; i++ ) { %>
    <tr>
        <td><a href="/customer/?cu_id=<%= result[i].cu_id %>"><%= result[i].cu_name %></a></td>
        <td><%= result[i].cu_phone %></td>
        <td><%= result[i].cu_address %></td>
        <td>
            <button onclick="event.preventDefault();window.location.href='/customer/edit2/?cu_id=<%= result[i].cu_id %>'">Edit</button>
            <form action="/customer/delete/" style="display:inline;">
                <input type="hidden" name="cu_id" id="cu_id" value="<%= result[i].cu_id %>" />
                <input type="submit" value="Delete"/>
            </form>
        </td>
    </tr>
    <% } %>
</table>
<br />
